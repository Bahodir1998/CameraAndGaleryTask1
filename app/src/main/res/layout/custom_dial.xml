<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_corner">

    <TextView
        android:id="@+id/tanla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tanlang"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/galery"
        app:layout_constraintTop_toBottomOf="@id/tanla" />

    <ImageView
        android:id="@+id/galery"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:paddingVertical="5dp"
        android:src="@drawable/ic_attach"
        app:layout_constraintLeft_toRightOf="@id/camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tanla" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Camera"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/camera"
        app:layout_constraintRight_toRightOf="@id/camera"
        app:layout_constraintTop_toBottomOf="@id/camera"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Galery"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/galery"
        app:layout_constraintRight_toRightOf="@id/galery"
        app:layout_constraintTop_toBottomOf="@id/galery"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>